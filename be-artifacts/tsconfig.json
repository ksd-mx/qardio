{
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "test"]
}
